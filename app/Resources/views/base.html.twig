<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>{% block title %}BukAdmin{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
      <style>
        body {
          padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        }
      </style>
      <link rel="stylesheet" href="{{ asset('css/bootstrap-responsive.css') }}" type="text/css" />
    {% endblock %}

    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="ico/apple-touch-icon-57-precomposed.png">
  </head>

  <body>

    <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="{{ path('BukminPanelBundle_homepage') }}">BukAdmin</a>
        <div class="nav-collapse collapse" style="height: 0px; ">
          <ul class="nav">
            <li class="{{ getControllerName() == 'player' ? 'active' : '' }}"><a href="{{ path('player') }}">{{ 'menu.players'|trans }}</a></li>
            <li class="divider-vertical"></li>
            <li class="{{ getControllerName() == 'ban' ? 'active' : '' }}"><a href="{{ path('ban') }}">{{ 'menu.bans'|trans }}</a></li>
            <li class="divider-vertical"></li>
            <li><a href="#plugins">{{ 'menu.plugins'|trans }}</a></li>
            <li class="divider-vertical"></li>
            <li><a href="#worlds">{{ 'menu.worlds'|trans }}</a></li>
            <li class="divider-vertical"></li>
            <li><a href="#server">{{ 'menu.server'|trans }}</a></li>
            <li class="divider-vertical"></li>
            <li class="{{ getControllerName() == 'user' ? 'active' : '' }}"><a href="{{ path('user') }}">{{ 'menu.users'|trans }}</a></li>
            <li class="divider-vertical"></li>
          </ul>
		  
          <ul class="pull-right nav">
            <li class="divider-vertical"></li>
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
              <li><a href="{{ path('user_show', { 'id': app.user.id }) }}">{{ app.user.username }}</a></li>
              <li class="{{ getControllerName() == 'security' ? 'active' : '' }}" >
                <a href="{{ path('fos_user_security_logout') }}">{{ 'menu.logout'|trans }}</a>
              </li>
            {% else %}
              <li class="{{ getControllerName() == 'security' ? 'active' : '' }}" >
                <a href="{{ path('fos_user_security_login') }}">{{ 'menu.login'|trans }}</a>
              </li>
            {% endif %}
          </ul> 
          
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

    {% block body %}
    {% endblock %}

    <!-- Le javascript -->
    {% block javascripts %}
      <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
    {% endblock %}
    
  </body>
</html>