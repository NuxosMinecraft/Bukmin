{% extends "BukminUserBundle::layout.html.twig" %}

{% block fos_user_content %}
  <h1>User</h1>

  <table class="record_properties">
      <tbody>
          <tr>
              <th>Username</th>
              <td>{{ entity.username }}</td>
          </tr>
          <tr>
              <th>Email</th>
              <td>{{ entity.email }}</td>
          </tr>
          <tr>
              <th>Enabled</th>
              <td>{{ entity.enabled }}</td>
          </tr>
          <tr>
              <th>Lastlogin</th>
              <td>{{ entity.lastLogin|date('Y-m-d H:i:s') }}</td>
          </tr>
          <tr>
              <th>Roles</th>
              <td>{% for role in entity.roles %}{{ role }}{% endfor %}</td>
          </tr>
          <tr>
              <th>Id</th>
              <td>{{ entity.id }}</td>
          </tr>
      </tbody>
  </table>

  <ul class="record_actions">
      <li>
          <a href="{{ path('user') }}">
              Back to the list
          </a>
      </li>
  </ul>
{% endblock %}
