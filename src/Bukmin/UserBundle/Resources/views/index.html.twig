{% extends "BukminUserBundle::layout.html.twig" %}

{% block fos_user_content %}
  <h1>User list</h1>

  <table class="records_list">
      <thead>
          <tr>
              <th>Id</th>
              <th>Username</th>
              <th>Email</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
      {% for entity in entities %}
          <tr>
              <td>{{ entity.id }}</td>
              <td>{{ entity.username }}</td>
              <td>{{ entity.email }}</td>
              <td>
                  <ul>

                  </ul>
              </td>
          </tr>
      {% endfor %}
      </tbody>
  </table>

  <ul>
      <li>
          <a href="{{ path('fos_user_registration_register') }}">
              Create a new entry
          </a>
      </li>
  </ul>
{% endblock %}