{% extends "BukminPanelBundle:Player:base.html.twig" %}

{% block bukminpanel_body %}
  <h1>Player</h1>

  <table class="record_properties">
      <tbody>
	  <tr>
	      <th>Id</th>
	      <td>{{ entity.id }}</td>
	  </tr>
	  <tr>
	      <th>Login</th>
	      <td>{{ entity.login }}</td>
	  </tr>
	  <tr>
	      <th>Email</th>
	      <td>{{ entity.email }}</td>
	  </tr>
	  <tr>
	      <th>Name</th>
	      <td>{{ entity.name }}</td>
	  </tr>
      </tbody>
  </table>

  <ul class="record_actions">
      <li>
	  <a href="{{ path('player') }}">
	      Back to the list
	  </a>
      </li>
      <li>
	  <a href="{{ path('player_edit', { 'id': entity.id }) }}">
	      Edit
	  </a>
      </li>
      <li>
	  <form action="{{ path('player_delete', { 'id': entity.id }) }}" method="post">
	      {{ form_widget(delete_form) }}
	      <button type="submit">Delete</button>
	  </form>
      </li>
  </ul>
{% endblock %}