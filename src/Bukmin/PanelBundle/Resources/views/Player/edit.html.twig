{% extends "BukminPanelBundle:Player:base.html.twig" %}

{% block bukminpanel_body %}
  <h1>Player edit</h1>

  <form action="{{ path('player_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
      {{ form_widget(edit_form) }}
      <p>
	  <button type="submit">Edit</button>
      </p>
  </form>

  <ul class="record_actions">
      <li>
	  <a href="{{ path('player') }}">
	      Back to the list
	  </a>
      </li>
      <li>
	  <form action="{{ path('player_delete', { 'id': entity.id }) }}" method="post">
	      {{ form_widget(delete_form) }}
	      <button type="submit">Delete</button>
	  </form>
      </li>
  </ul>
{% endblock %}