{% extends "BukminPanelBundle:Ban:layout.html.twig" %}

{% block bukminpanel_body %}
  <h1>Ban list</h1>

  <table class="records_list table table-striped table-condensed">
      <thead>
          <tr>
              <th>Id</th>
              <th>Reason</th>
              <th>Expire</th>
              <th>Active</th>
              <th>Actions</th>
          </tr>
      </thead>
      <tbody>
      {% for entity in entities %}
          <tr>
              <td><a href="{{ path('ban_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
              <td>{{ entity.reason }}</td>
              <td>{% if entity.expire %}{{ entity.expire|date('Y-m-d H:i:s') }}{% endif %}</td>
              <td>{{ entity.active }}</td>
              <td>
                <a class="btn btn-mini btn-success" href="{{ path('ban_show', { 'id': entity.id }) }}">show</a>
                <a class="btn btn-mini btn-warning" href="{{ path('ban_edit', { 'id': entity.id }) }}">edit</a>
              </td>
          </tr>
      {% endfor %}
      </tbody>
  </table>

  <ul>
      <li>
          <a href="{{ path('ban_new') }}">
              Create a new entry
          </a>
      </li>
  </ul>
{% endblock %}