{% extends "BukminPanelBundle:Ban:layout.html.twig" %}

{% block bukminpanel_body %}
  <h1>Ban</h1>

  <table class="record_properties">
      <tbody>
          <tr>
              <th>Id</th>
              <td>{{ entity.id }}</td>
          </tr>
          <tr>
              <th>Reason</th>
              <td>{{ entity.reason }}</td>
          </tr>
          <tr>
              <th>Expire</th>
              <td>{{ entity.expire|date('Y-m-d H:i:s') }}</td>
          </tr>
          <tr>
              <th>Active</th>
              <td>{{ entity.active }}</td>
          </tr>
      </tbody>
  </table>

  <ul class="record_actions">
      <li>
          <a href="{{ path('ban') }}">
              Back to the list
          </a>
      </li>
      <li>
          <a href="{{ path('ban_edit', { 'id': entity.id }) }}">
              Edit
          </a>
      </li>
      <li>
          <form action="{{ path('ban_delete', { 'id': entity.id }) }}" method="post">
              {{ form_widget(delete_form) }}
              <button type="submit">Delete</button>
          </form>
      </li>
  </ul>
{% endblock %}